<div class="row justify-content-center">
    <h3>Edit Transaction</h3>
</div>

<hr class="solid">

<div class="row justify-content-center">
    <form action="/<%- transaction._id %> " method="post">
        <input type="hidden" name="_method" value="put">
        <div class="row">
            <div class="input-field">
                <label for="date">Date</label>
                <input type="date" id="date" name="date" required>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <p>Type:</p>
                <input type="radio" id="type" name="type" value="Income">
                <label for="type">Income</label><br>
                <input type="radio" id="type" name="type" value="Expense" checked>
                <label for="type">Expense</label><br>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <label for="category">Category</label>
                <select id="category" name="category">
                    <option value="Automobile">Automobile</option>
                    <option value="Bill & Utilities">Bill & Utilities</option>
                    <option value="Business">Business</option>
                    <option value="Clothing">Clothing</option>
                    <option value="Entertainment">Entertainment</option>
                    <option value="Food">Food</option>
                    <option value="Gifts & Donations">Gifts & Donations</option>
                    <option value="Healthcare">Healthcare</option>
                    <option value="Investment">Investment</option>
                    <option value="Personal Care">Personal Care</option>
                    <option value="Salary">Salary</option>
                    <option value="Shopping">Shopping</option>
                    <option value="Side Hustle">Side Hustle</option>
                    <option value="Travel">Travel</option>
                    <option value="Others" selected>Others</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <label for="amount">Amount</label>
                <input  type="number" 
                        id="amount" 
                        name="amount" 
                        min="0.01" 
                        max="9999999" 
                        step="0.01"
                        value = "<%- transaction.amount %>"
                        onchange="(function(el){el.value=parseFloat(el.value).toFixed(2);})(this)">
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <label for="mode">Mode</label>
                <select id="mode" name="mode">
                    <option value="Cash">Cash</option>
                    <option value="Credit Card">Credit Card</option>
                    <option value="Debit Card">Debit Card</option>
                    <option value="Net Banking">Net Banking</option>
                    <option value="Cheque">Cheque</option>
                </select>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Comments</h5>
                <input type="text" name="comment" id="comment" maxlength="20" value="<%- transaction.comment %>">
            </div>
        </div>
        <hr class="solid">
        <div class="row justify-content-between">
            <input type="submit" value="Save" class="btn btn-primary">
            <a href="/dashboard" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>