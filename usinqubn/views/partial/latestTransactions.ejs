
<div id="dashboardChart">
  <div class="m-b-15">
    <h3>Latest Transaction</h3>
  </div>
    
  <table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Category</th>
        <th>Mode</th>
        <th>Amount</th>
        <th>Comments</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>
      <% for( let i = 0; i < 5; i++ ) { %>
        <tr>
          <td><%- moment(transactionData[i].date).format('l') %> </td>
          <td><%- transactionData[i].type %> </td>
          <td><%- transactionData[i].category %> </td>
          <td><%- transactionData[i].mode %> </td>

        <% if (transactionData[i].type === 'Income') { %>
          <td style="background-color:rgba(0, 128, 0, 0.5)">$<%- transactionData[i].amount.toFixed(2) %></td>
        <% } else { %>
          <td style="background-color:rgba(255, 0, 0, 0.5)">$<%- transactionData[i].amount.toFixed(2) %></td>
        <% } %>

          <td><%- transactionData[i].comment %> </td>
          <td><a href="#" class="text-decoration-none"><i class="fas fa-edit"></i></a>
              &nbsp;
              <a href="javascript:void(0)" id="delete-id" class="text-decoration-none"><i class="fas fa-trash-alt"></i></a>
          </td>   
        </tr>
      <% } %>        
    </tbody>
  </table>  
</div>

