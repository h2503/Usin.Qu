
<div id="latestTransaction">
  <div class="m-b-15">
    <h5>Latest Transaction</h5>
  </div>
    
  <table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Category</th>
        <th>Mode</th>
        <th>Amount</th>
        <th>Comments</th>
        <th>Edit</th>
      </tr>
    </thead>
    <tbody>



      <% for( let i = 0; i < transactionData.length && i < 5; i++ ) { %>   <!--limit data to only 5 item WITHOUT RUNNING INTO UNDEFINED ERROR-->
        <tr>
          <td><%- moment(transactionData[i].date).format('D MMM ') %> </td>
          <td><%- transactionData[i].type %> </td>
          <td><%- transactionData[i].category %> </td>
          <td><%- transactionData[i].mode %> </td>

        <% if (transactionData[i].type === 'Income') { %>
          <td style="background-color:rgba(0, 128, 0, 0.5)">$<%- transactionData[i].amount.toFixed(2) %></td>
        <% } else { %>
          <td style="background-color:rgba(255, 0, 0, 0.5)">$<%- transactionData[i].amount.toFixed(2) %></td>
        <% } %>

          <td><%- transactionData[i].comment %> </td>
          <td id="updateDelete">
            <a href="edit_transaction/<%- transactionData[i]._id %>" class="text-decoration-none"><i class="fas fa-edit"></i></a>
            <form action="<%- transactionData[i]._id %>" method="post" id="delete-form">
              <input type="hidden" name="_method" value="delete">
              <a href="javascript:void(0)" id="delete-id" class="text-decoration-none"><i class="fas fa-trash-alt"></i></a>
            </form>
          </td>   
        </tr>
      <% } %>  
      
      
      
    </tbody>
  </table>  
</div>

