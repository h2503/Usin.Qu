<!-- Script for creating charts -->
<script>
  // Script for creating Line charts
  const labels = ["January", "February", "March", "April", "May", "June"];
  const data = {
    labels: labels,
    datasets: [
      {
        label: "Income",
        backgroundColor: "rgb(255, 99, 132)",
        borderColor: "rgb(255, 99, 132)",
        showLine: true,
        data: [0, 10, 5, 2, 20, 30, 45],
      },
      {
        label: "Expenses",
        backgroundColor: "rgb(199, 15, 227)",
        borderColor: "rgb(199, 15, 227)",
        showLine: true,
        data: [10, 20, 30, 5, 15, 23, 55],
      },
    ],
  };

  const config = {
    type: "line",
    data,
    options: {},
