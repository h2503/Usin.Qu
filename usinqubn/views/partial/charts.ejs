      </div>
    </div>

    <div class="row">
      <div class="col-md-12"><%- include('latestTransactions'); %></div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="jumbotron">
      <h3>Planning to Buy</h3>
      <div class="todoListContainer">
        <input
          type="text"
          id="newTodo"
          placeholder="Set your plan here"
        /><button id="addTodo">
          <i class="fa fa-plus"></i>
        </button>
        <ul id="todoList"></ul>
